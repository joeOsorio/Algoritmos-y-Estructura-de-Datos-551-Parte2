{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Compilación con (C90 estricto)",
            "command": "C:/Strawberry/c/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-std=c90",
                "-Wall",
                "-Werror",
                "-Wextra",
                "-Wpedantic",
                "-Wstrict-prototypes",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilación estricta con warnings habilitados (C90)"
        },
