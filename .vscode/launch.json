{
  "version": "2.0.0",
  "configurations": [
    
    {
      "name": "Depuración C (GCC/GDB) - Estricta",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [
        {
          "name": "PATH",
          "value": "${env:PATH};C:/Strawberry/c/bin"
        }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/Strawberry/c/bin/gdb.exe",
      "preLaunchTask": "C/C++: Compilación con (C90 estricto)",
      "setupCommands": [
        {
          "description": "Pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Sintaxis Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        },
        {
          "description": "Mostrar registros",
          "text": "-gdb-set print registers on",
          "ignoreFailures": true
        }
      ],
      "visualizerFile": "${workspaceFolder}/.vscode/natvis/standard.natvis",
      "showDisplayString": true
    },
    {
      "name": "Depuración C (GCC/GDB) - Rápida",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/Strawberry/c/bin/gdb.exe",
      "preLaunchTask": "C/C++: Compilación básica",
      "setupCommands": [
        {
          "description": "Pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
